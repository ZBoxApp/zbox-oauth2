<div class="container" id="login-block">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <i class="logo-img"></i>
                <form class="form-signin" role="form" action="/login" method="post">
                    {{#if message.length }}
                        {{#each message}}
                            <div class="has-error">{{this}}</div>
                        {{/each}}
                    {{/if}}
                    <div class="append-icon">
                        <input type="text" name="username" id="username" class="form-control form-white username" placeholder="Usuario" required>
                        <i class="glyphicon glyphicon-user"></i>
                    </div>
                    <div class="append-icon m-b-20">
                        <input type="password" name="password" id="password" class="form-control form-white password" placeholder="Clave" required>
                        <i class="glyphicon glyphicon-lock"></i>
                    </div>
                    <button type="submit" id="submit-form" class="btn btn-lg btn-primary btn-block">Iniciar sesi√≥n</button>
                </form>
            </div>
        </div>
    </div>
    <p class="account-copyright">
        <span><a href="http://www.zboxapp.com" target="_parent">ZBox Mail</a> : Correo en la nube, seguro y facil de usar</span><br />
        <span>Copyright &copy; 2014-2015 </span><span>ZBox Spa</span>. <span>Todos los derechos reservados.</span>
    </p>
</div>